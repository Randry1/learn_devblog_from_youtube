<article class="post">
  <sections class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <div> <%= image_tag post.image.url(:thumb), class: 'img-show' if post.image? %> </div>
    <small>
      <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
      |
      <%= link_to 'Изменить', post_path(post) %>
      |
      <%= link_to 'Удалить', post_path(post), method: :delete, data: {confirm: 'Вы уверены?'} %>
    </small>
  </sections>
  <sections class="post-summary">
    <%= post.summary %>
  </sections>
</article>

