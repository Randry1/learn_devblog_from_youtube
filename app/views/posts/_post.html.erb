<article class="post">
  <sections class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <div> <%= image_tag post.image.url(:thumb), class: 'img-show' if post.image? %> </div>
    <small>
      <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
      |
      <%= link_to t('posts.index.post.edit'), post_path(post) %>
      |
      <%= link_to t('posts.index.post.delete'), post_path(post), method: :delete, data: {confirm: 'Вы уверены?'} %>
    </small>
  </sections>
  <sections class="post-summary">
    <%= post.summary %>
  </sections>
  <section class="footer-summary">
      <%= raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-primary'}.join(' ') %>
  </section>
</article>

